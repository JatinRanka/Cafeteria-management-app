<!DOCTYPE html>
<html>
  <head>
    <title>CafeteriaManagementApp</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <%if flash[:error]%>
    <p class="flash-error">
      <%= flash[:error]%>
    </p>
  <% end %>

  <body>
    <%= yield %>
  </body>
</html>
