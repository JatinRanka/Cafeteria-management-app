<h1>Sign up</h1>

<section class="Form-Container">

  <%= form_with url: users_path, method: :post do |form| %>
    <div class="Form-section">
      <p>Name: </p>
      <%= form.text_field :name, class: "Form-Input" %>
    </div>

    <div class="Form-section">
      <p>Email: </p>
      <%= form.email_field :email, class: "Form-Input" %>
    </div>

    <div class="Form-section">
      <p>Password: </p>
      <%= form.password_field :password, class: "Form-Input" %>
    </div>

    <br />
    <%= form.submit "Sign up", class: "button primary-button" %>

  <% end %>

  <br />

  <%= link_to "Sign in", new_sessions_path %>

</section>
