<div class="orders">

  <table class="my-1">
    <tr>
      <th>ID</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Status</th>
      <th> </th>
    </tr>

    <% orders.each do |order| %>
      <tr>
        <td>
          <%= order.id%>
        </td>

        <td>
          <%= order.created_at.to_formatted_s(:short) %>
        </td>

        <td>
          Rs. <%= order.order_items.sum(:amount) %>
        </td>

        <td>
          <%= order.is_delivered ? "Delivered" : "Pending"%>
        </td>

        <td>
          <%= link_to "Order details",  "/orders/#{order.id}"%>
        </td>

      </tr>
    <% end %>

    </table>

</div>
